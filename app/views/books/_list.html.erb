<h1>User info</h1>

<%= attachment_image_tag current_user, :profile_image, format: 'jpeg', fallback: "/assets/no_image.jpg", size: "100x100" %>

  <h4>name<%= user.name %></h4>
  <h4>introduction<%= user.introduction %></h4>
  <%= link_to "Update User" ,edit_user_path(user.id) %><!--Update Userhaあとでとる!-->

<%= form_with model: book, local:true do |f| %>
  <h1>New book</h1>
  <h4>Title</h4>
  <%= f.text_field :book_title %>

  <h4>Opinion</h4>
  <%= f.text_area :book_opinion %><br>
  <%= f.submit 'Create Book' %>

<% end %>