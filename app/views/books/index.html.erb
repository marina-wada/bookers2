<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', book: @book, user: @user %>
    </div>

    <div class="col">
      <h2>Books</h2>
      <% @books.each do |book| %>
        <div class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= attachment_image_tag current_user, :profile_image %></td>

              <td><%= book.title %></td>

              <td><%= book.body %></td>
            </tr>
          </tbody>

        </div>
      <% end %>

    </div>
  </div>
</div>
