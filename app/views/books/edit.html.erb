<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= render 'layouts/bookflash', book: @book %>
      <%= form_with model:@book, local:true do |f| %>

        <h4>Title</h4>
        <%= f.text_field :title, :size=> "60" %>

        <h4>Opinion</h4>
        <%= f.text_area :body, :size=> "60x2" %><br>
        <%= f.submit 'Update Book', class: "btn btn-success btn-sm mt-2" %>

      <% end %>
      <div class="mt-2">
        <%= link_to "Show", book_path(@book) %>
        |
        <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</div>