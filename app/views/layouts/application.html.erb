<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, intial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/c5b12faeda.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm bg-dark">
      <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto p-3 ">

             <li class="nav-item">
               <%= link_to "Home", root_path, class: "text-white navbar-item fas fa-home fa-fw" %>
             </li>

             <% if user_signed_in? %>

             <li class="nav-item">
               <%= link_to "Users", users_path, class: "text-white navbar-item fas fa-users fa-fw" %>
             </li>

             <li class="nav-item">
               <%= link_to "Books", books_path, class: "text-white navbar-item fas fa-book-open fa-fw" %>
             </li>

             <li class="nav-item">
               <%= link_to "logout", destroy_user_session_path, class: "text-white navbar-item fas fa-sign-in-alt fa-fw", method: :delete %>
             </li>

             <% else %>
             <li class="nav-item">
               <%= link_to "About", homes_about_path, class: "text-white navbar-item fas fa-link fa-fw" %>
             </li>

             <li class="nav-item">
               <%= link_to "sign up", new_user_registration_path, class: "text-white nav-item fas fa-user-plus fa-fw" %>
             </li>

             <li class="nav-item">
               <%= link_to "login", new_user_session_path, class: "text-white navbar-item fas fa-sign-in-alt fa-fw" %>
             </li>
             <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>

  <footer>
    <div class="container mt-5">
      <div class"row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>

    </div>
  </footer>
</html>
