<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, intial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/c5b12faeda.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="bg-dark">
      <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

             <% if user_signed_in? %>
             <li class="nav-item">
               <%= link_to users_path(@user), class: "text-white" do %>
                <div class="home">
                 <span class="fas fa-home"></span>
                   Home
                 </div>
               <% end %>
             </li>

             <li class="nav-item">
               <%= link_to users_path, class: "text-white" do %>
                 <div class="users">
                   <span class="fas fa-users"></span>
                    Users
                 </div>
               <% end %>
             </li>

             <li class="nav-item">
               <%= link_to books_path, class: "text-white" do %>
                 <div class="books">
                   <span class="fas fa-book-open"></span>
                   Books
                 </div>
                <% end %>
             </li>

             <li class="nav-item">
               <%= link_to destroy_user_session_path, class: "text-white", method: :delete do %>
                 <div class="logout">
                   <span class="fas fa-sign-in-alt"></span>
                   Logout
                 </div>
               <% end %>
             </li>

             <% else %>
             <li class="nav-item">
               <%= link_to root_path, class: "text-white" do %>
                 <div class="home">
                   <span class="fas fa-home"></span>
                   Home
                 </div>
               <% end %>
             </li>

             <li class="nav-item">
               <%= link_to homes_about_path, class: "text-white" do %>
                 <div class="about">
                   <span class="fas fa-link"></span>
                   About
                 </div>
               <% end %>
             </li>

             <li class="nav-item">
               <%= link_to new_user_registration_path, class: "text-white" do %>
                 <div class="sign up">
                   <span class="fas fa-user-plus"></span>
                   sign up
                 </div>
               <% end %>
             </li>

             <li class="nav-item">
               <%= link_to new_user_session_path, class: "text-white" do %>
                 <div class="login">
                   <span class="fas fa-sign-in-alt"></span>
                   login
                 </div>
               <% end %>
             </li>
             <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>

  <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>

    </div>
  </footer>
</html>
