<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', book: @book, user: @user %>
    </div>

    <div class="col">
      <h1>Books</h1>
      <% @books.each do |book| %>
<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <a>
          <%= attachment_image_tag current_user, :profile_image, format: 'jpeg', fallback: "/assets/no_image.jpg", size: "100x100" %><br>
          <%= @user.name %>
        </a>
      </td>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
        </td>
      <td><%= book.body %></td>
    </tr>
  </tbody>
  <% end %>
</table>
    </div>
  </div>
</div>