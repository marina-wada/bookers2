<h1>User info</h1>
<%= form_with model: @book, local:true do |f| %>
  <%= f.attachment_field :image %>

  <h4>name</h4>
  <h4>introduction</h4>
  <%= f.submit %>

  <h1>New book</h1>
  <h4>Title</h4>
  <%= f.text_field :book_title %>

  <h4>Opinion</h4>
  <%= f.text_area :book_opinion %>
  <%= f.submit 'Update User' %>

<% end %>

<h1>Books</h1>
<% @book.each do |book| %>
<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th><%= attachment_profile_image_tag profile_image, :image %>
          <%= profile_image_tag('sample-author1.jpg') %>
      </th>
      <th><%= book.title %></th>
      <th><%= book.opinion %></th>
    </tr>
  </tbody>
</table>