<%= render 'books/list', book: @book, user: @user %>

<h1>Books</h1>
<% @books.each do |book| %>
<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <a>
          <%= attachment_image_tag current_user, :profile_image, format: 'jpeg', fallback: "/assets/no_image.jpg", size: "100x100" %><br>
          <%= @user.name %>
        </a>
      </td>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= book.book_title %>
        <% end %>
        </td>
      <td><%= book.book_opinion %></td>
    </tr>
  </tbody>
  <% end %>
</table>