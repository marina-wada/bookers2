<div class="container mt-3">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <%= form_with model: @user, local:true do |f| %>
          <div class="mt-2">
            <label>Name</label><br>
            <%= f.text_field :name, :size=> "60" %>
          </div>

          <div class="mt-3">
            <label>Image</label><br>
            <%= f.attachment_field :profile_image %>
          </div>

          <div class="mt-3">
            <label>Introduction</label><br>
          <%= f.text_area :introduction, :size=> "60x2" %><br>
          <%= f.submit 'Update User', class: "btn btn-secondary mt-3" %>
          </div>

        <% end %>
    </div>
  </div>
</div>